# Local Testing Environment Configuration (with LocalStack)
# Copy this to .env for local testing

# AWS Credentials (use dummy values for LocalStack)
AWS_ACCESS_KEY_ID=test
AWS_SECRET_ACCESS_KEY=test
AWS_REGION=us-east-1

# AWS Bedrock (must use real AWS, LocalStack doesn't support Bedrock)
BEDROCK_REGION=us-east-1
BEDROCK_MODEL_ID=us.anthropic.claude-3-5-sonnet-20241022-v2:0

# SigNoz (optional for local testing, can be provided via payload)
SIGNOZ_API_ENDPOINT=https://your-signoz-instance.signoz.cloud
SIGNOZ_API_KEY=your-api-key-here

# S3 Configuration (LocalStack)
S3_BUCKET_NAME=incident-logs-test
USE_LOCALSTACK=true
LOCALSTACK_ENDPOINT=http://localhost:14566

# SQS Configuration (LocalStack)
SQS_ENABLED=true
SQS_INPUT_QUEUE_URL=http://localhost:14566/000000000000/incident-input-queue
SQS_OUTPUT_QUEUE_URL=http://localhost:14566/000000000000/incident-output-queue
SQS_ENDPOINT_URL=http://localhost:14566
SQS_POLL_INTERVAL=20
SQS_VISIBILITY_TIMEOUT=300

# Application
LOG_LEVEL=INFO
LOG_FORMAT=human

