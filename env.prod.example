# Production Environment Configuration (AWS)
# Copy this to .env for production environment deployment

# AWS Credentials (use real AWS credentials or IAM role)
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_REGION=us-east-1

# AWS Bedrock
BEDROCK_REGION=us-east-1
BEDROCK_MODEL_ID=us.anthropic.claude-3-5-sonnet-20241022-v2:0

# SigNoz (optional, can be provided via payload)
# SIGNOZ_API_ENDPOINT=https://your-signoz-instance.signoz.cloud
# SIGNOZ_API_KEY=your-api-key-here

# S3 Configuration (AWS)
S3_BUCKET_NAME=incident-logs-prod
USE_LOCALSTACK=false

# SQS Configuration (AWS)
SQS_ENABLED=true
SQS_INPUT_QUEUE_URL=https://sqs.us-east-1.amazonaws.com/YOUR_ACCOUNT_ID/incident-input-queue-prod
SQS_OUTPUT_QUEUE_URL=https://sqs.us-east-1.amazonaws.com/YOUR_ACCOUNT_ID/incident-output-queue-prod
# SQS_ENDPOINT_URL not needed for AWS
SQS_POLL_INTERVAL=20
SQS_VISIBILITY_TIMEOUT=300

# Application
LOG_LEVEL=INFO
LOG_FORMAT=json

